<MyButton@Button>:
    color: 50/255, 50/255, 50/255, 1
    background_color: 0, 0, 0, 0
    background_normal: ''
    background_active: ''
    canvas.before:
        Color:
            rgba: 1, 172/255, 62/255, 1
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [20]

