    color: 50/255, 50/255, 50/255, 1
    background_color: 1, 250/255, 207/255, 1
    background_normal: ''
    background_active: ''
    multiline: False

<Message>:
    size_hint: 1, None
    height: self.minimum_height
    orientation: 'vertical'
    padding: '10dp'
    canvas.before:
        Color:
            rgba: 1, 87/255, 87/255, 1
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [20]
    Label:
        id: name
        bold: True
        size_hint: 1, None
        height: self.texture_size[1]
        color: 0, 0, 0, 1
    Label:
        id: message
        size_hint: 1, None
        halign: 'center'
        valign: 'center'
        text_size: self.width, None
        height: self.texture_size[1]
        color: 0, 0, 0, 1

<Information>:
    size_hint: 1, None
