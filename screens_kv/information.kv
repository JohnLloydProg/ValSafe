

<LobbyScreen>:
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos
    GridLayout:
        size_hint: 1, 1
        rows: 2
        AnchorLayout:
            size_hint: 1, None
            height: '50dp'
            anchor_x: 'left'
            anchor_y: 'top'
            padding: '5dp'
            Button:
                size_hint: None, None
                size: '40dp', '40dp'
                on_press: app.sm.current = 'navigation'
                background_color: 0, 0, 0, 0
                Image:
                    source: './images/arrow-left.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    size: self.parent.width, self.parent.height
                    allow_stretch: True
        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                size_hint: 1, 1
                spacing: '10dp'
                padding: '20dp'
                LobbyButton:
                    text: 'Road'
                    size_hint: 1, None
                    height: '60dp'
                    on_press: root.information_clicked(self)
                LobbyButton:
                    text: 'Earthquake'
                    size_hint: 1, None
                    height: '60dp'
                    on_press: root.information_clicked(self)
                LobbyButton:
                    text: 'Fire'
                    size_hint: 1, None
                    height: '60dp'
                    on_press: root.information_clicked(self)
                LobbyButton:
                    text: 'Typhoon'
                    size_hint: 1, None
                    height: '60dp'
                    on_press: root.information_clicked(self)
                LobbyButton:
                    text: 'Other'
                    size_hint: 1, None
                    height: '60dp'
                    on_press: root.information_clicked(self)

<InformationScreen>:
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        size_hint: 1, 1
        orientation: 'vertical'
        padding: '10dp'
        spacing: '10dp'
        AnchorLayout:
            size_hint: 1, None
            height: '50dp'
            anchor_x: 'left'
            anchor_y: 'top'
            padding: '5dp'
            Button:
                size_hint: None, None
                size: '40dp', '40dp'
                on_press: app.sm.current = 'lobby'
                background_color: 0, 0, 0, 0
                Image:
                    source: './images/arrow-left.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    size: self.parent.width, self.parent.height
                    allow_stretch: True
        Label:
            id: info_title
            color: 0, 0, 0, 1
            font_size: '30dp'
            text: 'Loading'
            size_hint: 1, 0.2
            canvas.before:
                Color:
                    rgba: 1, 250/255, 207/255, 1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [25]
        Image:
            id: image
            size_hint: 1, 1
            allow_stretch: True
            keep_ratio: True
        ScrollView:
            BoxLayout:
                id: basic_infos
                orientation: 'vertical'
                size_hint: 1, None
                height: self.minimum_height
                padding: '10dp'
                spacing: '10dp'

<TopicScreen>:
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos
    GridLayout:
        rows: 2
        size_hint: 1, 1
        AnchorLayout:
            size_hint: 1, None
            height: '50dp'
            anchor_x: 'left'
            anchor_y: 'top'
            padding: '5dp'
            Button:
                size_hint: None, None
                size: '40dp', '40dp'
                on_press: app.sm.current = 'lobby'
                background_color: 0, 0, 0, 0
                Image:
                    source: './images/arrow-left.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    size: self.parent.width, self.parent.height
                    allow_stretch: True
        ScrollView:
            id: info_scroll
            GridLayout:
                rows: 2
                size_hint: 1, None
                height: self.minimum_height
                spacing: '10dp'
                padding: '10dp'
                Label:
                    id: topic_title
                    color: 0, 0, 0, 1
                    font_size: '20dp'
                    text: 'Loading'
                    size_hint: 1, None
                    height: self.texture_size[1] + 20
                    canvas.before:
                        Color:
                            rgba: 1, 250/255, 207/255, 1
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                            radius: [25]
                BoxLayout:
                    id: information_layout
                    orientation: 'vertical'
                    size_hint: 1, None
                    height: self.minimum_height
                    spacing: '10dp'

